{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "alwaysStrict": true,
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2020",
      "lib": ["es2020"],
      "resolveJsonModule": true,
      "paths": {
        "@lib/*": ["./tarpon/lib/*"]
      },
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "noPropertyAccessFromIndexSignature": false
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }
  