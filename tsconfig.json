{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "cdk.out"],
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es2020"],
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@cdk/*": ["./lib/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
