{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["**/*.ts", "scripts/coverage-report/generate-coverage-stats.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "cdk.out", "cdktf.out"],
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./lib/*"],
      "@cdktf/*": ["./.gen/*"]
    },
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
