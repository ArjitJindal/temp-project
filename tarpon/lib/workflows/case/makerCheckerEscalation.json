{
  "name": "Maker-Checker-Escalation Case Workflow",
  "statuses": [
    "OPEN",
    "CLOSED",
    "ESCALATED_IN_REVIEW",
    "CLOSED_IN_REVIEW",
    "ESCALATED",
    "OPEN_IN_PROGRESS",
    "OPEN_ON_HOLD",
    "ESCALATED_IN_PROGRESS",
    "ESCALATED_ON_HOLD"
  ],
  "statusAssignments": {
    "OPEN": "maker",
    "ESCALATED_IN_REVIEW": "checker",
    "CLOSED_IN_REVIEW": "checker",
    "ESCALATED": "escalation",
    "OPEN_IN_PROGRESS": null,
    "OPEN_ON_HOLD": null,
    "ESCALATED_IN_PROGRESS": null,
    "ESCALATED_ON_HOLD": null
  },
  "transitions": {
    "OPEN": {
      "maker": [
        {
          "action": "CLOSE",
          "to": "CLOSED_IN_REVIEW"
        },
        {
          "action": "ESCALATE",
          "to": "ESCALATED_IN_REVIEW"
        }
      ],
      "_DEFAULT": [
        {
          "action": "CLOSE",
          "to": "CLOSED_IN_REVIEW"
        },
        {
          "action": "ESCALATE",
          "to": "ESCALATED_IN_REVIEW"
        },
        {
          "action": "SET_IN_PROGRESS",
          "to": "OPEN_IN_PROGRESS"
        },
        {
          "action": "SET_ON_HOLD",
          "to": "OPEN_ON_HOLD"
        }
      ]
    },
    "OPEN_IN_PROGRESS": {
      "maker": [
        {
          "action": "CLOSE",
          "to": "CLOSED_IN_REVIEW"
        },
        {
          "action": "ESCALATE",
          "to": "ESCALATED_IN_REVIEW"
        }
      ],
      "_DEFAULT": [
        {
          "action": "CLOSE",
          "to": "CLOSED_IN_REVIEW"
        },
        {
          "action": "ESCALATE",
          "to": "ESCALATED_IN_REVIEW"
        },
        {
          "action": "SET_ON_HOLD",
          "to": "OPEN_ON_HOLD"
        },
        {
          "action": "SET_OPEN",
          "to": "OPEN"
        }
      ]
    },
    "OPEN_ON_HOLD": {
      "maker": [
        {
          "action": "CLOSE",
          "to": "CLOSED_IN_REVIEW"
        },
        {
          "action": "ESCALATE",
          "to": "ESCALATED_IN_REVIEW"
        }
      ],
      "_DEFAULT": [
        {
          "action": "CLOSE",
          "to": "CLOSED_IN_REVIEW"
        },
        {
          "action": "ESCALATE",
          "to": "ESCALATED_IN_REVIEW"
        },
        {
          "action": "SET_IN_PROGRESS",
          "to": "OPEN_IN_PROGRESS"
        },
        {
          "action": "SET_OPEN",
          "to": "OPEN"
        }
      ]
    },
    "CLOSED_IN_REVIEW": {
      "checker": [
        {
          "action": "APPROVE",
          "to": "CLOSED"
        },
        {
          "action": "REJECT",
          "to": "OPEN"
        }
      ]
    },
    "ESCALATED_IN_REVIEW": {
      "checker": [
        {
          "action": "APPROVE",
          "to": "ESCALATED"
        },
        {
          "action": "REJECT",
          "to": "OPEN"
        }
      ]
    },
    "ESCALATED": {
      "escalation": [
        {
          "action": "CLOSE",
          "to": "CLOSED"
        },
        {
          "action": "SEND_BACK",
          "to": "ESCALATED_IN_REVIEW"
        },
        {
          "action": "SET_IN_PROGRESS",
          "to": "ESCALATED_IN_PROGRESS"
        },
        {
          "action": "SET_ON_HOLD",
          "to": "ESCALATED_ON_HOLD"
        }
      ]
    },
    "ESCALATED_IN_PROGRESS": {
      "escalation": [
        {
          "action": "CLOSE",
          "to": "CLOSED"
        },
        {
          "action": "SEND_BACK",
          "to": "ESCALATED_IN_REVIEW"
        },
        {
          "action": "SET_ON_HOLD",
          "to": "ESCALATED_ON_HOLD"
        },
        {
          "action": "SET_ESCALATED",
          "to": "ESCALATED"
        }
      ]
    },
    "ESCALATED_ON_HOLD": {
      "escalation": [
        {
          "action": "CLOSE",
          "to": "CLOSED"
        },
        {
          "action": "SEND_BACK",
          "to": "ESCALATED_IN_REVIEW"
        },
        {
          "action": "SET_IN_PROGRESS",
          "to": "ESCALATED_IN_PROGRESS"
        },
        {
          "action": "SET_ESCALATED",
          "to": "ESCALATED"
        }
      ]
    }
  },
  "autoClose": true
}
